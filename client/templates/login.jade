.row
  div
    form(ng-submit="login()" role='login')
      h2 Login to your account
      input.form-control.input-lg(
          type='text'
          name='username'
          placeholder='Username'
          required=''
          ng-model="username")
      input.form-control.input-lg(
          type='password'
          placeholder='Password'
          required=''
          ng-model="password")
      button.btn.btn-lg.btn-primary.btn-block(type='submit', name='go') Sign in
      div
        a(href='#') Create account
        |  or 
        a(href='#') reset password
